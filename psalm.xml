<?xml version="1.0"?>
<psalm
    errorLevel="3"
    resolveFromConfigFile="true"
    findUnusedCode="false"
    findUnusedIssueHandlerSuppression="false"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <xi:include href="docker/psalm/default_project_files.xml" />
    <xi:include href="docker/psalm/default_forbidden_functions.xml" />
    <xi:include href="docker/psalm/default_issue_handlers.xml" />
<!--    <xi:include href="docker/psalm/plugins/default_symfony_doctrine_plugins.xml" />-->

    <issueHandlers xmlns="https://getpsalm.org/schema/config">
        <MissingOverrideAttribute>
            <errorLevel type="suppress">
                <directory name="src" />
            </errorLevel>
        </MissingOverrideAttribute>
    </issueHandlers>
</psalm>
